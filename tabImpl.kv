#:kivy 1.0

<Tab>:

    do_default_tab: False

    # Main Tab
	TabbedPanelItem:
        text: "Import to ISO"
        GridLayout:
            cols: 4
            Button:
                id: "isoButton"
                text: "Select Melee ISO"
                on_press: root.setPaths("Melee","iso")
            Button:
                id: "gcrButton"
                text: "Select gcr Installation"
                on_press: root.setPaths("gcr","exe")
            Button:
                id: "fileButton"
                text: "Select files to import"
                on_press: root.getFiles()
            Button:
                id: "importButton"
                text: "Import files"
                on_press: root.importFiles()
            ScrollView:
                do_scroll_x: False
                do_scroll_y: True
                Label:
                    size_hint_y: None
                    height: self.texture_size[1]
                    text_size: self.width, None
                    padding: 10, 10
                    id: "isoLabel"
                    text: root.isoPath
                    text_size: self.width, None

            ScrollView:
                do_scroll_x: False
                do_scroll_y: True
                Label:
                    size_hint_y: None
                    height: self.texture_size[1]
                    text_size: self.width, None
                    padding: 10, 10
                    id: "gcrLabel"
                    text: root.gcrPath
                    text_size: self.width, None

            ScrollView:  
                do_scroll_x: False
                do_scroll_y: True  
                Label:
                    size_hint_y: None
                    height: self.texture_size[1]
                    text_size: self.width, None
                    padding: 10, 10           
                    id: "fileLabel"
                    text: root.fileList
                    text_size: self.width, None

            ScrollView:
                do_scroll_x: False
                do_scroll_y: True
                Label:
                    size_hint_y: None
                    height: self.texture_size[1]
                    text_size: self.width, None
                    padding: 10, 10
                    id: "statusLabel"
                    text: root.status
                    text_size: self.width, None

    # Instructions tab
	TabbedPanelItem:
        text: "Instructions"
        Label:
            id: "instructionsLabel"
            text: root.instructionsText